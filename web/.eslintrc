{
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "fetch": true,
        "logger": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-var": 2,
        "no-console": 0,
        "react/jsx-uses-vars": 2,
        "react/jsx-uses-react": 1
    },
    "parserOptions": {
      "ecmaVersion": 6,
    "ecmaFeatures": {
          "jsx": true
      }
    }
}
